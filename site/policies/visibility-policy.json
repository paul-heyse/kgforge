{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kgfoundry.local/policies/visibility-policy.json",
  "title": "NavMap Visibility Policy",
  "type": "object",
  "required": [
    "version",
    "module",
    "symbol"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "1"
    },
    "module": {
      "type": "object",
      "required": [
        "exports",
        "sections"
      ],
      "properties": {
        "exports": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Za-z_]\\w*$"
          },
          "uniqueItems": true
        },
        "defaults": {
          "type": "object",
          "properties": {
            "owner": {
              "type": "string",
              "minLength": 1
            },
            "stability": {
              "type": "string",
              "enum": [
                "stable",
                "beta",
                "experimental",
                "deprecated"
              ]
            },
            "since": {
              "type": "string"
            },
            "deprecated_in": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          "additionalProperties": false
        },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "id",
              "symbols"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
              },
              "symbols": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^[A-Za-z_]\\w*$"
                },
                "minItems": 1
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "symbol": {
      "type": "object",
      "required": [
        "stability",
        "owner",
        "since"
      ],
      "properties": {
        "stability": {
          "type": "string",
          "enum": [
            "stable",
            "beta",
            "experimental",
            "deprecated"
          ]
        },
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "since": {
          "type": "string"
        },
        "deprecated_in": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
