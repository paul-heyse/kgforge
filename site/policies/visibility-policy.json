{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kgfoundry.local/policies/visibility-policy.json",
  "title": "NavMap Visibility Policy",
  "type": "object",
  "required": ["version", "module", "symbol"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1"
    },
    "module": {
      "type": "object",
      "required": ["exports", "sections"],
      "properties": {
        "exports": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[A-Za-z_]\\w*$" },
          "uniqueItems": true
        },
        "defaults": {
          "type": "object",
          "properties": {
            "owner": { "type": "string", "minLength": 1, "pattern": "^@[-a-zA-Z0-9_./]+$" },
            "stability": {
              "type": "string",
              "enum": ["stable", "beta", "experimental", "deprecated"]
            },
            "since": { "type": "string", "$comment": "PEP 440 string; validated in code" },
            "deprecated_in": { "type": ["string", "null"], "$comment": "PEP 440 string; validated in code" }
          },
          "additionalProperties": false
        },
        "sections": {
          "type": "array",
          "minItems": 1,
          "prefixItems": [
            {
              "type": "object",
              "required": ["id", "symbols"],
              "properties": {
                "id": { "type": "string", "const": "public-api" },
                "symbols": {
                  "type": "array",
                  "items": { "type": "string", "pattern": "^[A-Za-z_]\\w*$" },
                  "minItems": 1,
                  "uniqueItems": true
                }
              },
              "additionalProperties": false
            }
          ],
          "items": {
            "type": "object",
            "required": ["id", "symbols"],
            "properties": {
              "id": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
              "symbols": {
                "type": "array",
                "items": { "type": "string", "pattern": "^[A-Za-z_]\\w*$" },
                "minItems": 1,
                "uniqueItems": true
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "symbol": {
      "type": "object",
      "required": ["stability", "owner", "since"],
      "properties": {
        "stability": {
          "type": "string",
          "enum": ["stable", "beta", "experimental", "deprecated"]
        },
        "owner": { "type": "string", "minLength": 1, "pattern": "^@[-a-zA-Z0-9_./]+$" },
        "since": { "type": "string", "$comment": "PEP 440 string; validated in code" },
        "deprecated_in": { "type": ["string", "null"], "$comment": "PEP 440 string; validated in code" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

