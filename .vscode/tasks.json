{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docstrings: Generate",
      "type": "shell",
      "command": "uv run python -m tools.docstring_builder.cli generate --ignore-missing --force",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Docstrings: Fix changed files",
      "type": "shell",
      "command": "uv run python -m tools.docstring_builder.cli fix --changed-only --diff --ignore-missing",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Docstrings: Watch",
      "type": "shell",
      "command": "uvx watchfiles \"src/**\" \"tools/docstring_builder/**\" -- uv run python -m tools.docstring_builder.cli check --changed-only --diff --ignore-missing",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
