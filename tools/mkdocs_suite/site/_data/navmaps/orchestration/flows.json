    "since": null,
    "spec": "openapi/openapi-cli.yaml",
    "augment": "openapi/_augment_cli.yaml",
    "binary": "kgf",
    "protocol": "openapi-cli",
    "tags": [
      "orchestration"
    ],
    "extras": {
      "entrypoint": "orchestration.cli:app",
      "operations": {
        "index-bm25": {
          "operation_id": "cli.index_bm25",
          "summary": "Build BM25 index from JSON/Parquet chunks.",
          "description": "Invoke the Lucene-backed BM25 indexing flow. Requires chunk metadata and optional\nbackend selection. Emits structured metrics and Problem Details on failure.\n",
          "handler": "orchestration.cli:index_bm25",
          "tags": [
            "orchestration",
            "index_bm25"
          ],
          "problem_details": [
            "schema/examples/problem_details/tool-execution-error.json"
          ],
          "code_samples": [
            {
              "lang": "bash",
              "source": "kgf index-bm25 data/chunks.parquet --backend lucene --index-dir ./_indices/bm25"
            }
          ]
        },
        "index-faiss": {
          "operation_id": "cli.index_faiss",
          "summary": "Build FAISS index from dense vectors.",
          "description": "Construct a FAISS ANN index from dense vectors. Supports CPU/GPU factories and exposes\ndetailed diagnostics. Rebuilds existing indices idempotently.\n",
          "handler": "orchestration.cli:index_faiss",
          "tags": [
            "orchestration",
            "index_faiss"
          ],
          "env": [
            "KGF_FAISS_RESOURCES"
          ],
          "problem_details": [
            "schema/examples/problem_details/tool-execution-error.json",
            "schema/examples/problem_details/faiss-index-build-timeout.json"
          ],
          "code_samples": [
            {
              "lang": "bash",
              "source": "kgf index-faiss artifacts/vectors.json --factory 'OPQ64,IVF8192,PQ64' --metric ip"
            }
          ]
        },
        "api": {
          "operation_id": "cli.api",
          "summary": "Launch FastAPI search service.",
          "description": "Start the FastAPI-based search service defined in `search_api.app`. Useful for local\nvalidation and integration testing. Requires uvicorn to be available.\n",
          "handler": "orchestration.cli:api",
          "tags": [
            "orchestration",
            "api"
          ],
          "env": [
            "KGF_SEARCH_CONFIG"
          ],
          "problem_details": [
            "schema/examples/problem_details/public-api-invalid-config.json"
          ],
          "code_samples": [
            {
              "lang": "bash",
              "source": "kgf api --port 8080"
            }
          ]
        },
        "e2e": {
          "operation_id": "cli.e2e",
          "summary": "Execute end-to-end orchestration demo.",
          "description": "Run the bundled Prefect flow that exercises the full ingestion and search pipeline. Serves\nas a smoke test and example workflow.\n",
          "handler": "orchestration.cli:e2e",
          "tags": [
            "orchestration",
            "e2e"
          ],
          "env": [
            "KGF_PROFILE"
          ],
          "problem_details": [
            "schema/examples/problem_details/public-api-invalid-config.json"
          ],
          "code_samples": [
            {
              "lang": "bash",
              "source": "kgf e2e"
            }
          ]
        }
      }
    }
  },
