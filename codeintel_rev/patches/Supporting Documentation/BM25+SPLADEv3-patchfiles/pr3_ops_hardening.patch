+name: retrieval-ci
+on:
+  workflow_dispatch:
+  schedule:
+    - cron: "13 3 * * *"  # nightly
+
+jobs:
+  build-and-test:
+    runs-on: [self-hosted, onprem-search]
+    steps:
+      - uses: actions/checkout@v4
+      - name: Set up JDK 21 (Lucene/Anserini)
+        uses: actions/setup-java@v4
+        with:
+          java-version: "21"
+          distribution: "temurin"
+      - name: Set up Python
+        uses: actions/setup-python@v5
+        with:
+          python-version: "3.11"
+      - name: Install deps
+        run: |
+          python -m pip install -U pip wheel
+          pip install -e .[dev] pyserini==0.40.0
+      - name: Unit tests
+        run: pytest -q
+
+  rebuild-indexes:
+    needs: build-and-test
+    runs-on: [self-hosted, onprem-search]
+    steps:
+      - uses: actions/checkout@v4
+      - name: Build BM25 Lucene index
+        run: |
+          python -m codeintel_rev.cli.build_indexes bm25 \
+            --jsonl-dir data/jsonl \
+            --index-dir artifacts/lucene_bm25_new
+      - name: Build SPLADE impact index
+        run: |
+          python -m codeintel_rev.cli.build_indexes splade-impact \
+            --jsonl-dir artifacts/splade_vectors \
+            --index-dir artifacts/lucene_splade_new
+      - name: Publish/flip current
+        run: |
+          python -m codeintel_rev.cli.build_indexes publish \
+            --base-dir artifacts \
+            --version ${{ github.run_id }} \
+            --bm25-dir artifacts/lucene_bm25_new \
+            --splade-dir artifacts/lucene_splade_new
+
+  recall-regression:
+    needs: rebuild-indexes
+    runs-on: [self-hosted, onprem-search]
+    steps:
+      - uses: actions/checkout@v4
+      - name: Install deps
+        run: |
+          python -m pip install -U pip wheel
+          pip install -e .[dev] pyserini==0.40.0
+      - name: Run recall harness (synthetic & golden queries)
+        run: |
+          python tools/recall_harness.py --queries ops/recall_queries.yaml --k 10 --threshold 0.95
+
+
