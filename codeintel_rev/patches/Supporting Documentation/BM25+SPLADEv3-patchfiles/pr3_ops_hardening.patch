+#!/usr/bin/env python
+from __future__ import annotations
+import json, sys, time, statistics as stats
+from pathlib import Path
+import typer, yaml
+from kgfoundry_common.prometheus import gauge
+from codeintel_rev.io.hybrid_search import HybridSearchEngine
+
+app = typer.Typer()
+recall_g = gauge("codeintel_rev_recall_at_k", "Offline recall@k for golden queries", ["k"])
+
+@app.command()
+def main(queries: Path, k: int = 10, threshold: float = 0.9) -> None:
+    \"\"\"Compute recall@k over a small golden set; fail CI if below threshold.\"\"\"
+    data = yaml.safe_load(queries.read_text())
+    engine = HybridSearchEngine(...)
+    recalls = []
+    for q in data["queries"]:
+        expected = set(q["expect_ids"])  # union of acceptable ids
+        res = engine.search(q["text"], semantic_hits=[], limit=k)
+        got = {str(h.doc_id) for h in res.results}
+        recalls.append(1.0 if expected & got else 0.0)
+    recall_at_k = sum(recalls) / max(1, len(recalls))
+    recall_g.labels(k=str(k)).set(recall_at_k)
+    print(json.dumps({"recall_at_k": recall_at_k}))
+    if recall_at_k < threshold:
+        raise SystemExit(f"Recall@{k} {recall_at_k:.3f} < threshold {threshold:.3f}")
+
+if __name__ == "__main__":
+    app()
+
