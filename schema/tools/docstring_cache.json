{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kgfoundry.dev/schema/tools/docstring-cache.json",
  "title": "DocstringBuilderCache",
  "description": "Versioned cache document recording docstring builder results.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "schemaId", "generatedAt", "entries"],
  "properties": {
    "schemaVersion": {
      "description": "Semantic version of this schema.",
      "type": "string",
      "const": "1.0.0"
    },
    "schemaId": {
      "description": "Canonical identifier for this schema.",
      "type": "string",
      "const": "https://kgfoundry.dev/schema/tools/docstring-cache.json"
    },
    "generatedAt": {
      "description": "ISO 8601 timestamp when the cache document was generated.",
      "type": "string",
      "format": "date-time"
    },
    "entries": {
      "description": "Mapping of absolute file paths to cache metadata entries.",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/CacheEntry"
      },
      "default": {}
    }
  },
  "$defs": {
    "CacheEntry": {
      "description": "Metadata for a single cached file.",
      "type": "object",
      "additionalProperties": false,
      "required": ["mtime", "config_hash"],
      "properties": {
        "mtime": {
          "description": "Modification time of the source file (seconds since epoch).",
          "type": "number"
        },
        "config_hash": {
          "description": "Hash of the docstring builder configuration.",
          "type": "string"
        }
      }
    }
  },
  "examples": [
    {
      "schemaVersion": "1.0.0",
      "schemaId": "https://kgfoundry.dev/schema/tools/docstring-cache.json",
      "generatedAt": "2025-01-01T12:00:00+00:00",
      "entries": {
        "/workspace/src/example.py": {
          "mtime": 1735665600.0,
          "config_hash": "sha256:deadbeef"
        }
      }
    },
    {
      "schemaVersion": "1.0.0",
      "schemaId": "https://kgfoundry.dev/schema/tools/docstring-cache.json",
      "generatedAt": "2025-01-01T12:00:00+00:00",
      "entries": {}
    },
    {
      "schemaVersion": "1.0.0",
      "schemaId": "https://kgfoundry.dev/schema/tools/docstring-cache.json",
      "generatedAt": "2025-01-01T12:00:00+00:00",
      "entries": {
        "/workspace/src/module1.py": {
          "mtime": 1735665600.0,
          "config_hash": "sha256:abc123"
        },
        "/workspace/src/module2.py": {
          "mtime": 1735665700.0,
          "config_hash": "sha256:abc123"
        },
        "/workspace/src/module3.py": {
          "mtime": 1735665800.0,
          "config_hash": "sha256:def456"
        }
      }
    }
  ]
}

