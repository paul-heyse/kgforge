{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kgfoundry.dev/schemas/search_api/search_request.v1.json",
  "title": "Search Request",
  "description": "Schema for search API request payloads",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "description": "Search query string",
      "minLength": 1
    },
    "k": {
      "type": "integer",
      "description": "Number of results to return",
      "minimum": 1,
      "default": 10
    },
    "filters": {
      "type": ["object", "null"],
      "description": "Optional filters (field-value pairs)",
      "additionalProperties": true
    },
    "explain": {
      "type": "boolean",
      "description": "Whether to include explanation/details",
      "default": false
    }
  },
  "required": ["query"],
  "additionalProperties": false,
  "x-version": "1.0.0",
  "x-compatibility-notes": "Initial version. Breaking changes will increment major version."
}

