{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kgfoundry.docs/schema/docfacts.json",
  "title": "DocFacts Document",
  "type": "object",
  "additionalProperties": false,
  "required": ["docfactsVersion", "provenance", "entries"],
  "properties": {
    "docfactsVersion": {
      "type": "string",
      "enum": ["2.0"]
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["builderVersion", "configHash", "commitHash", "generatedAt"],
      "properties": {
        "builderVersion": {"type": "string", "minLength": 1},
        "configHash": {"type": "string", "pattern": "^[0-9a-f]{64}$"},
        "commitHash": {"type": "string", "minLength": 1},
        "generatedAt": {"type": "string", "minLength": 1}
      }
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "qname",
          "module",
          "kind",
          "filepath",
          "lineno",
          "end_lineno",
          "decorators",
          "is_async",
          "is_generator",
          "owned",
          "parameters",
          "returns",
          "raises",
          "notes"
        ],
        "properties": {
          "qname": {"type": "string", "minLength": 1},
          "module": {"type": "string"},
          "kind": {"type": "string", "enum": ["class", "function", "method"]},
          "filepath": {"type": "string", "minLength": 1},
          "lineno": {"type": "integer", "minimum": 1},
          "end_lineno": {"anyOf": [{"type": "integer", "minimum": 1}, {"type": "null"}]},
          "decorators": {
            "type": "array",
            "items": {"type": "string"}
          },
          "is_async": {"type": "boolean"},
          "is_generator": {"type": "boolean"},
          "owned": {"type": "boolean"},
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "name",
                "display_name",
                "annotation",
                "optional",
                "default",
                "kind"
              ],
              "properties": {
                "name": {"type": ["string", "null"]},
                "display_name": {"type": ["string", "null"]},
                "annotation": {"type": ["string", "null"]},
                "optional": {"type": ["boolean", "null"]},
                "default": {"type": ["string", "null"]},
                "kind": {"type": ["string", "null"]}
              }
            }
          },
          "returns": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["kind", "annotation", "description"],
              "properties": {
                "kind": {"type": "string", "enum": ["returns", "yields"]},
                "annotation": {"type": ["string", "null"]},
                "description": {"type": ["string", "null"]}
              }
            }
          },
          "raises": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["exception", "description"],
              "properties": {
                "exception": {"type": "string"},
                "description": {"type": ["string", "null"]}
              }
            }
          },
          "notes": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    }
  }
}
